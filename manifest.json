{
  "name": "Mob2Pin",
  "version": "1.0",
  "description": "Create pinboard bookmarks for all Chrome Mobile bookmarks",
  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "browser_action": {
      "default_title": "Mob2Pin",
      "default_icon": "icon.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
